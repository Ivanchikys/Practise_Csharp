@model EveningMovies.Models.EveningMovie

@{
    ViewData["Title"] = "Добавить фильм";
}

<h2>@ViewData["Title"]</h2>
<h4>Заполните данные о фильме</h4>
<hr />

@if (ViewBag.ErrorMessage != null)
{
         <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div class="row">
    <div class="col-md-6">
        <form asp-action="Add" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Genre" class="form-label"></label>
                <input asp-for="Genre" class="form-control" placeholder="например, Комедия, Триллер (необязательно)"/>
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MoodTag" class="form-label"></label>
                <input asp-for="MoodTag" class="form-control" placeholder="например, Расслабляющий, Захватывающий, Смешной" />
                <span asp-validation-for="MoodTag" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="AddedBy" class="form-label"></label>
                <input asp-for="AddedBy" class="form-control" placeholder="Ваше имя или никнейм" />
                <span asp-validation-for="AddedBy" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <button type="submit" class="btn btn-primary">
                    Добавить
                 </button>
                <a asp-action="Index" class="btn btn-secondary">
                     Отмена
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}