@model EveningMovies.Models.EveningMovie

@{
    ViewData["Title"] = "Удаление фильма";
}

<h2>@ViewData["Title"]</h2>
<h3 class="text-danger">Вы уверены, что хотите удалить этот фильм?</h3>
<hr />
<div>
    <h4>@Html.DisplayFor(model => model.Title)</h4>
    <dl class="row">
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.Genre)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.Genre)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.MoodTag)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.MoodTag)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.AddedBy)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.AddedBy)
        </dd>
         <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.DateAdded)
        </dt>
        <dd class = "col-sm-9">
            @Model.DateAdded.ToLocalTime()
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>