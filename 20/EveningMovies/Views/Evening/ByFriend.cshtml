@model IEnumerable<EveningMovies.Models.Movie>
@{
    ViewData["Title"] = $"Фильмы от {ViewBag.FriendName}";
}
<h2>@ViewData["Title"]</h2>
@if (!Model.Any())
{
  <p>@ViewBag.FriendName пока ничего не рекомендовал(а).</p>
}
else
{
        <table class="table table-striped table-bordered"> 
            <thead>
                <tr>
                    <th>Название</th>
                    <th>Жанр</th>
                    <th>Кем рекомендован</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var movie in Model)
            {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => movie.Title)</td>
                            <td>@Html.DisplayFor(modelItem => movie.Genre)</td>
                            <td>@Html.DisplayFor(modelItem => movie.RecommendedBy)</td>
                        </tr>
            }
            </tbody>
        </table>
}

<hr />
<p>
    <a asp-action="Suggest" asp-controller="Evening" class="btn btn-secondary">Предложить фильм</a>
    <a asp-action="Index" asp-controller="Evening" class="btn btn-outline-info">На главную</a>
</p>