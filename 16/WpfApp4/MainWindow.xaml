<Window x:Class="TeacherJournal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TeacherJournal"
        Title="Электронный журнал" Height="600" Width="800">

    <Window.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Window.InputBindings>
        <KeyBinding Key="N" Modifiers="Ctrl" Command="{Binding AddGradeCommand}"/>
        <KeyBinding Key="E" Modifiers="Ctrl" Command="{Binding EditGradeCommand}"/>
        <KeyBinding Key="Delete" Command="{Binding DeleteGradeCommand}"/>
    </Window.InputBindings>

    <Window.DataContext>
        <local:JournalViewModel/>
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem Header="Файл"/>
            <MenuItem Header="Студенты"/>
            <MenuItem Header="Оценки"/>
            <MenuItem Header="Настройки"/>
        </Menu>

        <TextBlock Grid.Row="1"
                   Text="Электронный журнал"
                   FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Предмет:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox ItemsSource="{Binding Courses}" DisplayMemberPath="Name" Width="200"/>
        </StackPanel>

        <DataGrid Grid.Row="3"
                  ItemsSource="{Binding Grades}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ФИО студента" Binding="{Binding Student.FullName}" Width="*"/>
                <DataGridTextColumn Header="Оценка" Binding="{Binding Grade, Mode=TwoWay}" Width="75"/>
                <DataGridTextColumn Header="Комментарий" Binding="{Binding Comment, Mode=TwoWay}" Width="*"/>
                <DataGridTemplateColumn Header="Присутствие" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsPresent, Mode=TwoWay}" HorizontalAlignment="Center"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Средний балл" Binding="{Binding Average}" IsReadOnly="True" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Добавить оценку" Width="120" Margin="5" Command="{Binding AddGradeCommand}"/>
            <Button Content="Редактировать" Width="120" Margin="5" Command="{Binding EditGradeCommand}"/>
            <Button Content="Удалить оценку" Width="120" Margin="5" Command="{Binding DeleteGradeCommand}"/>
            <Button Width="150" Height="30" Margin="10" Content="Экспорт в Excel">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Assets/excel.png" Width="16" Height="16" Margin="5"/>
                            <ContentPresenter VerticalAlignment="Center"/>
                        </StackPanel>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
        <ProgressBar Grid.Row="5"
                     IsIndeterminate="True"
                     Height="20"
                     Margin="0,10,0,0"
                     Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>
    </Grid>
</Window>
